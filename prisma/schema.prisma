generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  COTIZADOR
}

enum PackageStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  fullName          String?
  passwordHash      String
  role              UserRole @default(EDITOR)
  isActive          Boolean  @default(true)
  canManagePackages Boolean  @default(true)
  canManageCsv      Boolean  @default(false)
  canManageUsers    Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  packages Package[] @relation("PackageCreator")
}

model Package {
  id                      String        @id @default(cuid())
  packageCode             String        @unique
  slug                    String        @unique
  name                    String
  destination             String
  durationDays            Int
  basePrice               Int
  offerPrice              Int?
  isOffer                 Boolean       @default(false)
  offerLabel              String?
  currency                String        @default("GTQ")
  summary                 String
  description             String
  coverImageUrl           String
  gallery                 Json
  includes                Json
  excludes                Json
  itinerary               Json
  whatsappPrefillTemplate String?
  status                  PackageStatus @default(DRAFT)
  createdById             String?
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  createdBy User?          @relation("PackageCreator", fields: [createdById], references: [id], onDelete: SetNull)
  media     PackageMedia[]
}

model PackageMedia {
  id        String   @id @default(cuid())
  packageId String
  url       String
  altText   String?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  package Package @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@index([packageId, sortOrder])
}

model AppSetting {
  key       String   @id
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
